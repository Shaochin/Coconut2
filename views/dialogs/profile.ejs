<!-- Modal -->
<div class="modal fade" id="profileModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="row centered-form">
        <div class="col-xs-12">
          <div class="panel panel-default" style="margin-bottom:0px;background: rgba(255, 255, 255, 0.8);">
            <div class="panel-heading">
                <h3 class="panel-title text-center">個人資料<br><small>Personal Profile</small></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="text-center">
                            <img src=<%=user.photo %> class="avatar img-circle img-thumbnail" alt="avatar">
                            <h6>User Profile</h6>

                        </div>
                    </div>
                    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                            <div class="alert alert-info alert-dismissable">
                                <a class="panel-close close" data-dismiss="alert">×</a> 
                                <i class="fa fa-coffee"></i>
                                Hello there<strong></strong><p> </p>User 
                                can modify school info here
                            </div>

                            <h3>Personal info</h3>

                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">First name:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="Jane" type="text">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-3 control-label">Last name:</label>
                                  <div class="col-lg-8">
                                    <input class="form-control" value="Bishop" type="text">
                                  </div>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                  <div class="col-lg-8">
                                    <input class="btn btn-primary" value="Save Changes" type="button">
                                    <span></span>
                                    <input class="btn btn-default" value="Cancel" type="reset">
                                  </div>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>